<div class="container">
  <h2><%= @place.name %></h2>

<% if @current_user %>
  <p>
    <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-outline-dark" >New Post</a>
  </p>


  <div class="row">
    <% for post in @place.posts.where({ user_id: session[:user_id] }) %>
      <div class="col-sm-4">
        <h5> <%= post.title %> </h5>
        <p> <%= post.posted_on %> </p>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% end %>
        <p> <%= post.description %></p>
      </div>
    <% end %>
  </div>
</div>
<% else %>
  You must first login to post.
<% end %>